<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:background="@color/gray"
    tools:context=".Fragments.area">

    <Spinner
        android:id="@+id/mass_spinner1"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/mass_view1"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:textColor="@color/black"
        android:id="@+id/mass_ed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="15dp"
        android:background="@null"
        android:text="999999"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mass_unit2" />

    <Spinner
        android:id="@+id/mass_spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mass_view1" />


    <TextView
        android:id="@+id/mass_unit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"
        android:text="UNT"
        android:textSize="22dp"

        app:layout_constraintBottom_toTopOf="@+id/mass_view1"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/mass_unit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:text="UNT"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/mass_ed1"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@null"
        android:layout_marginEnd="11dp"
        android:text="999999"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/mass_view1"
        app:layout_constraintEnd_toStartOf="@+id/mass_unit1" />


</androidx.constraintlayout.widget.ConstraintLayout>