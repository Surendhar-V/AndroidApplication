<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name ="colorPrimary">@color/primaryColorDark</item>
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />

    <style name="operatorbutton" parent="commanbutton">
        <item name="android:textColor">@color/btnText</item>
        <item name = "android:layout_width">80dp</item>
        <item name = "android:layout_height">80dp</item>
    </style>


    <style name="digitbutton" parent="commanbutton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="commanbutton" parent="Widget.Material3.Button">
        <item name = "android:layout_width">80dp</item>
        <item name = "android:layout_height">80dp</item>
        <item name = "android:backgroundTint">@color/btnDark</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:textSize">30dp</item>
        <item name = "android:layout_margin">5dp</item>
    </style>

    <style name="backbutton" parent="Widget.Material3.Button">

        <item name = "android:layout_width">30dp</item>
        <item name = "android:layout_height">30dp</item>
        <item name = "android:backgroundTint">@color/white</item>

    </style>


    <style name="operatorbutton_land" parent="commanbutton_land">

        <item name="android:textColor">@color/btnText</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="digitbutton_land" parent="commanbutton_land">

        <item name="android:textColor">@color/white</item>

    </style>

    <style name="commanbutton_land" parent="Widget.Material3.Button">

        <item name = "android:layout_width">60dp</item>
        <item name = "android:layout_height">40dp</item>
        <item name = "android:backgroundTint">@color/btnDark</item>
        <item name = "android:textAlignment">center</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="backbutton_land" parent="Widget.Material3.Button">

        <item name = "android:layout_width">30dp</item>
        <item name = "android:layout_height">30dp</item>
        <item name = "android:backgroundTint">@color/white</item>

    </style>


</resources>