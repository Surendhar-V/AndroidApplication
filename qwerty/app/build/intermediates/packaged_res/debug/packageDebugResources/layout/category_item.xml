<?xml version="1.0" encoding="utf-8"?>

                                                        

    
                 
                           
                                                       

                 
                                    
                                                                     
           


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:tag="layout/category_item_0"                                  
        android:gravity="center"
        android:orientation="vertical"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/category_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#808080"
            app:civ_border_width="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/category_img"
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:tag="binding_1"                
            android:textAlignment="center"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="@id/category_img"
            app:layout_constraintEnd_toEndOf="@+id/category_img"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

         
