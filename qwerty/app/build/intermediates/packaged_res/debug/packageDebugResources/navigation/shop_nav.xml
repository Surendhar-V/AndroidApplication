<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shop_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.qwerty.View.Shop.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >

        <action
            android:id="@+id/action_menuFragment_to_discountFragment"
            app:destination="@id/discountFragment" />
        <action
            android:id="@+id/action_menuFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_menuFragment_to_scanFragment"
            app:destination="@id/scanFragment" />

    </fragment>

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.qwerty.View.Shop.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_accountFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_accountFragment_to_scanFragment2"
            app:destination="@id/scanFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.qwerty.View.Shop.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_listItems"
            app:destination="@id/listItems" />
    </fragment>
    <fragment
        android:id="@+id/scanFragment"
        android:name="com.example.qwerty.View.Shop.ScanFragment"
        android:label="fragment_scan"
        tools:layout="@layout/fragment_scan" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.qwerty.View.Shop.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/discountFragment"
        android:name="com.example.qwerty.View.Shop.DiscountFragment"
        android:label="fragment_discount"
        tools:layout="@layout/fragment_discount" />
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.qwerty.View.Shop.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" >
        <action
            android:id="@+id/action_orderFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/listItems"
        android:name="com.example.qwerty.View.Shop.ListItemsFragment"
        android:label="fragment_list_items"
        tools:layout="@layout/fragment_list_items" />
</navigation>